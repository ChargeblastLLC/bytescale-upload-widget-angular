{
  "name": "@bytescale/upload-widget-angular-workspace",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "ng test --watch=false --browsers ChromeHeadless",
    "test:e2e": "npx wdio run tests/wdio.conf.ts --autoCompileOpts.tsNodeOpts.project=tests/tsconfig.json",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*/**/*.{js,jsx,ts,tsx,test}": [
      "bash -c \"npm run test:unit\""
    ],
    "*/**/*.{ts,tsx}": [
      "bash -c \"tsc --noEmit\""
    ],
    "*.{js,jsx,ts,tsx,json,css,html,md,yaml,yml}": [
      "prettier -w"
    ]
  },
  "dependencies": {
    "@angular/animations": "~17.3.1",
    "@angular/common": "~17.3.1",
    "@angular/compiler": "~17.3.1",
    "@angular/core": "~17.3.1",
    "@angular/forms": "~17.3.1",
    "@angular/platform-browser": "~17.3.1",
    "@angular/platform-browser-dynamic": "~17.3.1",
    "@angular/router": "~17.3.1",
    "@bytescale/upload-widget": "^4.24.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "17.3.2",
    "@angular/cli": "17.3.2",
    "@angular/compiler-cli": "17.3.1",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^16.11.7",
    "@wdio/cli": "^7.19.3",
    "@wdio/jasmine-framework": "^7.19.3",
    "@wdio/local-runner": "^7.19.3",
    "@wdio/spec-reporter": "^7.19.1",
    "chromedriver": "^121.0.0",
    "husky": "^7.0.4",
    "jasmine-core": "~4.0.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "lint-staged": "10.5.1",
    "ng-packagr": "17.3.0",
    "prettier": "2.1.2",
    "ts-node": "^10.7.0",
    "typescript": "5.2.2",
    "wdio-chromedriver-service": "^7.3.2",
    "wdio-wait-for": "^2.2.5",
    "webdriverio": "^7.19.3"
  }
}
